<%= content_for :head do %>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: #0f0f1a;
      min-height: 100vh;
      color: #e4e4e7;
    }

    /* Connection status indicator */
    .status-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
      padding: 8px 12px;
      background: rgba(255, 255, 255, 0.03);
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.06);
      font-size: 0.8rem;
      color: #71717a;
    }

    .status-dot {
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      margin-right: 6px;
      background: #ef4444;
      animation: pulse 2s infinite;
    }

    .status-dot.connected {
      background: #22c55e;
      animation: none;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .fetch-btn {
      background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
      border: none;
      border-radius: 6px;
      padding: 6px 12px;
      color: white;
      font-size: 0.75rem;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .fetch-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
    }

    .fetch-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .fetch-btn.fetching {
      background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
    }

    .status-left {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .status-right {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .notification-permission {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .notification-btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 4px;
      padding: 4px 10px;
      color: white;
      font-size: 0.7rem;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .notification-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
    }

    .notification-enabled {
      color: #22c55e;
    }

    .notification-disabled {
      color: #ef4444;
    }

    .notification-default {
      color: #eab308;
    }

    /* Notifications container */
    #notifications-container {
      position: fixed;
      top: 15px;
      right: 15px;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      gap: 10px;
      max-width: 350px;
    }

    .notification {
      background: rgba(15, 15, 26, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      padding: 12px 15px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      opacity: 0;
      transform: translateX(100%);
      transition: all 0.3s ease-out;
    }

    .notification.show {
      opacity: 1;
      transform: translateX(0);
    }

    .notification-bazos {
      border-left: 3px solid #eab308;
    }

    .notification-sauto {
      border-left: 3px solid #3b82f6;
    }

    .notification-content {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 8px;
      margin-bottom: 8px;
    }

    .notification-badge {
      font-size: 0.65rem;
      font-weight: 700;
      padding: 2px 6px;
      border-radius: 4px;
      text-transform: uppercase;
    }

    .notification-bazos .notification-badge {
      background: rgba(234, 179, 8, 0.2);
      color: #eab308;
    }

    .notification-sauto .notification-badge {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
    }

    .notification-title {
      font-size: 0.85rem;
      font-weight: 500;
      color: #e4e4e7;
      flex: 1;
      min-width: 150px;
    }

    .notification-price {
      font-weight: 600;
      color: #22c55e;
      font-size: 0.85rem;
    }

    .notification-link {
      display: inline-block;
      font-size: 0.75rem;
      color: #667eea;
      text-decoration: none;
      font-weight: 500;
    }

    .notification-link:hover {
      text-decoration: underline;
    }

    /* New car animation */
    .car-card.new-car {
      animation: newCarPulse 2s ease-out;
      position: relative;
    }

    .car-card.new-car::before {
      content: 'NEW';
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 10;
      background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
      color: white;
      font-size: 0.65rem;
      font-weight: 700;
      padding: 3px 8px;
      border-radius: 4px;
      animation: badgePulse 1s ease-in-out infinite;
    }

    @keyframes newCarPulse {
      0% {
        box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4);
        transform: scale(1.02);
      }
      70% {
        box-shadow: 0 0 0 15px rgba(34, 197, 94, 0);
        transform: scale(1);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
        transform: scale(1);
      }
    }

    @keyframes badgePulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 15px;
    }

    .tabs {
      display: flex;
      gap: 0;
      margin-bottom: 20px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      padding: 4px;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .tab {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      padding: 14px 20px;
      text-decoration: none;
      color: #71717a;
      border-radius: 10px;
      transition: all 0.2s;
      font-weight: 500;
    }

    .tab:hover {
      color: #a1a1aa;
      background: rgba(255, 255, 255, 0.05);
    }

    .tab.active {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .tab.active.bazos {
      background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
    }

    .tab.active.sauto {
      background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    }

    .tab-stats {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      font-size: 0.8rem;
    }

    .tab-stats .count {
      font-size: 1.4rem;
      font-weight: 700;
      line-height: 1;
    }

    .tab-stats .label {
      opacity: 0.8;
      font-size: 0.75rem;
    }

    .tab-today {
      font-size: 0.75rem;
      opacity: 0.7;
    }

    .filters {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      padding: 12px 16px;
      margin-bottom: 20px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .filters input[type="text"],
    .filters input[type="number"] {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      padding: 8px 12px;
      color: #e4e4e7;
      font-size: 0.9rem;
    }

    /* Hide number input spinners */
    .filters input[type="number"]::-webkit-outer-spin-button,
    .filters input[type="number"]::-webkit-inner-spin-button {
      -webkit-appearance: none !important;
      margin: 0 !important;
      display: none !important;
    }

    .filters input[type="number"] {
      -moz-appearance: textfield !important;
      appearance: textfield !important;
    }

    .filters input[type="number"]:focus::-webkit-outer-spin-button,
    .filters input[type="number"]:focus::-webkit-inner-spin-button {
      -webkit-appearance: none !important;
      display: none !important;
    }

    .filters input::placeholder {
      color: #71717a;
    }

    .filters input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }

    .price-group {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .price-group input {
      width: 90px;
    }

    .price-group span {
      color: #52525b;
    }

    .filters input[type="submit"] {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 8px;
      padding: 8px 20px;
      color: white;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .filters input[type="submit"]:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .results-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
      color: #71717a;
      font-size: 0.85rem;
    }

    .car-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 15px;
    }

    .car-card {
      background: rgba(255, 255, 255, 0.06);
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid rgba(255, 255, 255, 0.08);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .car-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    }

    .car-card a {
      text-decoration: none;
      color: inherit;
    }

    .car-image {
      width: 100%;
      height: 160px;
      object-fit: cover;
      background: rgba(0, 0, 0, 0.3);
    }

    .car-image-placeholder {
      width: 100%;
      height: 160px;
      background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1a 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #3f3f46;
      font-size: 2.5rem;
    }

    .car-content {
      padding: 14px;
    }

    .car-title {
      font-size: 0.95rem;
      font-weight: 600;
      margin-bottom: 8px;
      line-height: 1.3;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      color: #e4e4e7;
    }

    .car-price {
      font-size: 1.2rem;
      font-weight: 700;
      color: #22c55e;
      margin-bottom: 8px;
    }

    .car-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      font-size: 0.75rem;
      color: #a1a1aa;
    }

    .car-meta span {
      display: flex;
      align-items: center;
      gap: 3px;
    }

    .badge {
      display: inline-block;
      padding: 2px 6px;
      border-radius: 10px;
      font-size: 0.65rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .badge-bazos {
      background: rgba(234, 179, 8, 0.2);
      color: #eab308;
    }

    .badge-sauto {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
    }

    .no-cars {
      text-align: center;
      padding: 50px 20px;
      color: #52525b;
    }

    .no-cars h2 {
      font-size: 1.3rem;
      margin-bottom: 8px;
      color: #71717a;
    }

    footer {
      text-align: center;
      padding: 25px 20px;
      color: #3f3f46;
      font-size: 0.8rem;
    }

    footer a {
      color: #667eea;
      text-decoration: none;
    }

    @media (max-width: 640px) {
      .tabs {
        flex-direction: column;
      }

      .car-grid {
        grid-template-columns: 1fr;
      }

      .filters {
        flex-direction: column;
        align-items: stretch;
      }

      .filters input[type="text"] {
        width: 100%;
      }

      .price-group {
        width: 100%;
      }

      .price-group input {
        flex: 1;
      }

      .filters input[type="submit"] {
        width: 100%;
      }

      .status-bar {
        flex-direction: column;
        gap: 10px;
        align-items: flex-start;
      }

      .status-right {
        width: 100%;
        justify-content: space-between;
      }

      #notification-text {
        display: none;
      }
    }
  </style>
<% end %>

<!-- Notification container for toast messages -->
<div id="notifications-container"></div>

<div class="container">
  <!-- Status bar with connection status, notifications, and fetch controls -->
  <div class="status-bar">
    <div class="status-left">
      <span id="connection-status" class="status-dot"></span>
      <span id="status-text">Connecting...</span>
    </div>
    <div class="status-right">
      <div id="notification-status" class="notification-permission">
        <span id="notification-icon">üîî</span>
        <span id="notification-text">Checking...</span>
        <button id="notification-btn" class="notification-btn" style="display: none;">Enable</button>
      </div>
      <button id="fetch-btn" class="fetch-btn">
        <span id="fetch-btn-text">Start Fetching</span>
      </button>
    </div>
  </div>

  <div class="tabs">
    <a href="<%= root_path(tab: 'bazos') %>" class="tab bazos <%= 'active' if @tab == 'bazos' %>">
      <div class="tab-stats">
        <span class="count"><%= @stats[:bazos_total] %></span>
        <span class="label">Bazos.cz</span>
      </div>
      <span class="tab-today">+<%= @stats[:bazos_today] %> today</span>
    </a>
    <a href="<%= root_path(tab: 'sauto') %>" class="tab sauto <%= 'active' if @tab == 'sauto' %>">
      <div class="tab-stats">
        <span class="count"><%= @stats[:sauto_total] %></span>
        <span class="label">Sauto.cz</span>
      </div>
      <span class="tab-today">+<%= @stats[:sauto_today] %> today</span>
    </a>
  </div>

  <%= form_with url: root_path, method: :get, local: true, class: "filters" do %>
    <%= hidden_field_tag :tab, @tab %>
    <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
    <div class="price-group">
      <%= number_field_tag :min_price, params[:min_price], placeholder: "Min CZK", min: 0 %>
      <span>-</span>
      <%= number_field_tag :max_price, params[:max_price], placeholder: "Max CZK", min: 0 %>
    </div>
    <%= submit_tag "Filter", name: nil %>
  <% end %>

  <% if @cars.any? %>
    <div class="results-bar">
      <span>Showing <%= @cars.size %> of <%= @total_count %> listings</span>
      <span>Sorted by newest</span>
    </div>

    <div class="car-grid">
      <% @cars.each do |car| %>
        <div class="car-card">
          <a href="<%= car.url %>" target="_blank" rel="noopener">
            <% if car.image_thumbnail.present? %>
              <img src="<%= car.image_thumbnail %>" alt="<%= car.title %>" class="car-image" loading="lazy" onerror="this.style.display='none';this.nextElementSibling.style.display='flex';">
              <div class="car-image-placeholder" style="display: none;">üöó</div>
            <% else %>
              <div class="car-image-placeholder">üöó</div>
            <% end %>
            <div class="car-content">
              <h3 class="car-title"><%= car.title %></h3>
              <div class="car-price"><%= car.price_formatted.presence || "Price on request" %></div>
              <div class="car-meta">
                <% if car.locality.present? %>
                  <span>üìç <%= car.locality %></span>
                <% end %>
                <span>üïê <%= time_ago_in_words(car.created_at) %></span>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-cars">
      <h2>No listings found</h2>
      <p>Try adjusting your filters or wait for new listings.</p>
    </div>
  <% end %>

  <footer>
    <a href="/sidekiq">Sidekiq Dashboard</a>
  </footer>
</div>
